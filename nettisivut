    <script>
        // Navigation smooth scrolling
        document.addEventListener("DOMContentLoaded", function () {
            document.querySelectorAll("nav a").forEach(function (button) {
                button.addEventListener("mouseover", function () {
                    this.style.transform = "scale(1.1)";
                });
                button.addEventListener("mouseout", function () {
                    this.style.transform = "scale(1)";
                });
            });

            document.querySelectorAll("section").forEach(function (section) {
                if(window.innerWidth < 800) return; // No blur for mobile devices
                section.addEventListener("mouseover", function () {
                    this.style.transform = "scale(1.05)";
                    this.style.zIndex = "2";
                    document.querySelectorAll("section:not(:hover)").forEach(function (otherSection) {
                        otherSection.style.filter = "blur(1px)";
                    });
                });
                section.addEventListener("mouseout", function () {
                    this.style.transform = "scale(1)";
                    this.style.zIndex = "1";
                    document.querySelectorAll("section").forEach(function (otherSection) {
                        otherSection.style.filter = "blur(0)";
                    });
                });
            });

            document.querySelectorAll('nav a').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                    
                    const targetId = this.getAttribute('href');
                    const targetSection = document.querySelector(targetId);

                    window.scrollTo({
                        top: targetSection.offsetTop,
                        behavior: 'smooth'
                    });
                });
            });
        });

        // Slideshow functionality
        let slideIndex = 1;
        let slideshowTimer;
        let isPaused = false;

        // Initialize slideshow
        document.addEventListener("DOMContentLoaded", function() {
            showSlides(slideIndex);
            startSlideshow();

            // Pause slideshow on hover
            const slideshowContainer = document.getElementById('slideshowContainer');
            if (slideshowContainer) {
                slideshowContainer.addEventListener('mouseenter', function() {
                    pauseSlideshow();
                });
                
                slideshowContainer.addEventListener('mouseleave', function() {
                    resumeSlideshow();
                });
            }
        });

        function plusSlides(n) {
            pauseSlideshow();
            showSlides(slideIndex += n);
            // Resume after manual navigation
            setTimeout(resumeSlideshow, 3000);
        }

        function currentSlide(n) {
            pauseSlideshow();
            showSlides(slideIndex = n);
            // Resume after manual navigation
            setTimeout(resumeSlideshow, 3000);
        }

        function showSlides(n) {
            let slides = document.getElementsByClassName("slides");
            if (slides.length === 0) return;
            
            if (n > slides.length) slideIndex = 1;
            if (n < 1) slideIndex = slides.length;

            for (let i = 0; i < slides.length; i++) {
                slides[i].style.display = "none";
            }

            if (slides[slideIndex - 1]) {
                slides[slideIndex - 1].style.display = "flex";
            }
        }

        function nextSlide() {
            if (!isPaused) {
                slideIndex++;
                showSlides(slideIndex);
            }
        }

        function startSlideshow() {
            slideshowTimer = setInterval(nextSlide, 5000); // Change slide every 5 seconds
        }

        function pauseSlideshow() {
            isPaused = true;
            if (slideshowTimer) {
                clearInterval(slideshowTimer);
            }
        }

        function resumeSlideshow() {
            isPaused = false;
            startSlideshow();
        }
    </script>
</body>
